<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyToolbarThemeSimple.Base" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/mm</item>
    </style>

    <style name="Upload" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Uploading</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">5</item>
    </style>

    <style name="Update" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Updating</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">5</item>
    </style>

</resources>
