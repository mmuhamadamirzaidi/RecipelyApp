<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mmuhamadamirzaidi.recipelyapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Modules.Recipe.AddRecipeActivity"></activity>
        <activity android:name=".Modules.Category.AddCategoryActivity" />
        <activity android:name=".Modules.AboutActivity" />
        <activity android:name=".Modules.BookmarkActivity" />
        <activity android:name=".Modules.Recipe.RecipeDetailsActivity" />
        <activity android:name=".Modules.Recipe.RecipeActivity" />
        <activity android:name=".Modules.Category.CategoryActivity" />
        <activity android:name=".Modules.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.MainActivity" />
    </application>

</manifest>