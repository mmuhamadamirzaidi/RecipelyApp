<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mmuhamadamirzaidi.recipelyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Modules.AboutActivity"></activity>
        <activity android:name=".Modules.BookmarkActivity" />
        <activity android:name=".Modules.RecipeDetailsActivity" />
        <activity android:name=".Modules.RecipeActivity" />
        <activity android:name=".Modules.CategoryActivity" />
        <activity android:name=".Modules.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Modules.MainActivity" />
    </application>

</manifest>